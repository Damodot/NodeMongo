        //     const taskInput = document.querySelector('input[name="task"]');
        //     if (taskInput.value.trim() === '') {
        //         alert('Please enter a task before submitting.');
        //         return false;
        //     }
        //     return true;
        // }
    </script>
</head>

<body class="d-flex justify-content-content align-items-center">
    <main class="m-auto shadow rounded-4 p-4">
        <form action="/user/task" method="post" class="rounded-4p-3 m-auto">
            <h1 class="text-center fw-bolder">To Do List</h1>
            <input type="text" placeholder="Add Reminder" name="task" class="mt-4 form-control">

            <button class="btn btn-primary px-3 mt-4 rounded-4" type="submit">Add Reminder</button>
        </form>
        <div id="reply" class="mt-4">
            <% if (!database) { %>
                <h1 class="fw-bolder">Please enter your task</h1>
                <% } else { %>
                    <% database.forEach((taskObj, index)=> { %>
                        <section class="d-flex align-items-center justify-content-between mt-4">
                            <div class="sideOne d-flex">
                                <h3 class="fw-bolder">
                                    <%= index + 1 %>
                                </h3>
                                <h3 class="ms-4 fw-bolder">
                                    <%= taskObj.task.toUpperCase() %>
                                </h3>
                            </div>
                            <div class="otherSide d-flex">
                                <form action="/user/edit/<%= taskObj._id %>" method="get" class="d-inline">
                                    <button class="btn btn-success rounded-4" type="submit">Edit</button>
                                </form>
                                <form action="/user/delete/<%= taskObj._id %>" method="post" class="d-inline ms-3">
                                    <button class="btn btn-danger rounded-4" type="submit">Delete</button>
                                </form>
                            </div>
                        </section>
                        <hr class="my-4">
                        <% }); %>
                            <% } %>
        </div>
    </main>

</body>

</html>